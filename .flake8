# Taken directly from https://github.com/ambv/black/blob/master/.flake8
[flake8]
ignore = E203, E266, E501, W503, C901, D104, D100
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
enable-extensions = flake8-docstrings
per-file-ignores =
    benchmarks/**:D101,D102,D103,D105
    fletcher/_*.py:D101,D102,D103,D105
    tests/**:D101,D102,D103,D105
docstring-convention = numpy
